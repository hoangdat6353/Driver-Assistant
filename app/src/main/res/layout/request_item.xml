<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/radius"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRequestOwner_Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="5sp"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        android:text="Driver name" />

    <View
        android:layout_width="match_parent"
        android:background="#A3AAB1"
        android:layout_height="1dp">

    </View>

    <TextView
        android:id="@+id/tvRequestText_Item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="Câu hỏi" />

    <View
        android:layout_width="match_parent"
        android:background="#A3AAB1"
        android:layout_marginBottom="20dp"
        android:layout_height="1dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5sp"
            android:textColor="#009688"
            android:drawableLeft="@drawable/ic_baseline_person_pin_24"
            android:text="Người hỗ trợ:" />

        <TextView
            android:id="@+id/tvSupporterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="20sp"
            android:paddingLeft="10dp"
             />

        <ImageView
            android:id="@+id/imvRequestFlag_Item"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/uncheck" />
    </LinearLayout>

</LinearLayout>
