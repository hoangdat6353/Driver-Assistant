<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff0f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/radius"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivAppImageDetail"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:paddingLeft="5dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/oil_item" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChangeOilAddress_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="22sp"
                android:textAllCaps="true"
                android:text="Trạm B" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:background="#5C646C"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvChangeOilDay_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#189532"
                android:textSize="15sp"
                android:text="1/1/2022" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:background="#5C646C"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvChangeOilPrice_Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#751C27"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold"
                android:text="25.000VNĐ" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imvDeleteReminder_Item"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:drawableLeft="@drawable/ic_baseline_drive_eta_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Tên xe:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvVehicleName_ChangeOilDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="right"
                android:text="Vision"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:drawableLeft="@drawable/ic_baseline_filter_alt_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Dung tích:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvChangeOilCapacity_Details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="right"
                android:text="Vision"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:drawableLeft="@drawable/ic_baseline_add_road_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Số km:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvChangeOilKm_Details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="right"
                android:text="Vision"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:drawableLeft="@drawable/ic_baseline_note_add_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Ghi chú:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvChangeOilNote_Details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="right"
                android:text="Vision"
                android:inputType="textMultiLine"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>






</LinearLayout>