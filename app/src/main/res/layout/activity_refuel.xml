<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Refuel"
    android:background="#eff0f4" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingLeft="50dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/fuel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/radius"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="5dp"
                        android:text="Tên phương tiện:"
                        android:textSize="25sp"
                        android:drawableLeft="@drawable/ic_baseline_drive_eta_24"
                        android:drawablePadding="5dp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvVehicleName_Refuel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="5dp"
                        android:text="Phí:"
                        android:drawableLeft="@drawable/ic_baseline_money_24"
                        android:drawablePadding="5dp"
                        android:textSize="25sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/etRefuelPrice"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:hint="Nhập phí đổ xăng (VNĐ)"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="5dp"
                        android:text="Dung tích:"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_filter_alt_24"
                        android:textSize="25sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/etRefuelCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:hint="Nhập dung tích (lít)"
                        android:paddingBottom="5dp"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="5dp"
                        android:text="Số km:"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_add_road_24"
                        android:textSize="25sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/etRefuelKm"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:hint="Số km"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="5dp"
                        android:text="Ngày:"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_date_range_24"
                        android:textSize="25sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/etRefuelCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:hint="Chọn ngày"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="5dp"
                        android:text="Nơi thay:"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_water_damage_24"
                        android:textSize="25sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/etRefuelAddress"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:hint="Nhập địa chỉ nơi thay"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="20sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="5dp"
                        android:text="Ghi chú:"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_baseline_note_add_24"
                        android:textSize="25sp"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/etRefuelNote"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_bg"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:hint="Ghi chú"
                        android:paddingBottom="5dp"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnRefuelSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:backgroundTint="#425363"
                android:padding="10dp"
                android:text="Lưu"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>