<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#eff0f4"
    tools:context=".VehicleHistory"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/radius">

                <ImageView
                    android:id="@+id/imageViewVehicle_History"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:paddingLeft="5dp"
                    android:src="@drawable/vehicle_item" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewVehicleName_History"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Xe của tôi"
                        android:textAllCaps="true"
                        android:textSize="22sp" />


                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#5C646C" />

                    <TextView
                        android:id="@+id/textViewVehicleType_History"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingTop="5dp"
                        android:text="59M2 - 37123"
                        android:textColor="#751C27"
                        android:textSize="15sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imvDeleteReminder_Item"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#eff0f4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@drawable/ic_baseline_water_damage_24"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Đổ xăng:"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="40dp">

                        <TextView
                            android:id="@+id/imvRefuel_History"
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:drawableTop="@drawable/ic_baseline_add_24_blue"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="Thêm \n lịch sử"
                            android:textSize="22sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="45dp">

                        <TextView
                            android:id="@+id/imvHistoryRefuel_History"
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:drawableTop="@drawable/ic_baseline_list_alt_24_blue"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="Xem lịch sử"
                            android:textSize="22sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#eff0f4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@drawable/ic_baseline_autorenew_24"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Thay nhớt:"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="40dp">

                        <TextView
                            android:id="@+id/imvChangeOil_History"
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:drawableTop="@drawable/ic_baseline_add_24_blue"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="Thêm \n lịch sử"
                            android:textSize="22sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="45dp">

                        <TextView
                            android:id="@+id/imvHistoryChangeOil_History"
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:drawableTop="@drawable/ic_baseline_list_alt_24_blue"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="Xem lịch sử"
                            android:textSize="22sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#eff0f4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@drawable/ic_baseline_settings_24"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Thay linh kiện:"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="40dp">

                        <TextView
                            android:id="@+id/imvChangePart_History"
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:drawableTop="@drawable/ic_baseline_add_24_blue"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="Thêm \n lịch sử"
                            android:textSize="22sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="45dp">

                        <TextView
                            android:id="@+id/imvHistoryChangePart_History"
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:drawableTop="@drawable/ic_baseline_list_alt_24_blue"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="Xem lịch sử"
                            android:textSize="22sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>